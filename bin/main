#!/usr/bin/env ruby
# rubocop:disable all

require_relative '../lib/board'
require_relative '../lib/player'

class TicTacToe
  def initialize
    banner
  end

  def banner
    puts 'Welcome To Tic-Tac-Toe Game'
    puts '  ___ ___ ___  '
    puts ' | 1 | 2 | 3 | '
    puts ' |___|___|___| '
    puts ' | 4 | 5 | 6 | '
    puts ' |___|___|___| '
    puts ' | 7 | 8 | 9 | '
    puts ' |___|___|___| '
    puts '               '
  end

  def run
    player_x = Player.new
    player_o = Player.new
    puts "Player #{player_x.name} - #{player_x.symbol} \n Player #{player_o.name} - #{player_o.symbol} "
    puts ''

    board = Board.new(player_x, player_o)
    board.run_game
  end
end



start = TicTacToe.new
start.run